{
  "extends": "@tsconfig/strictest/tsconfig.json",

  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    "outDir": "./lib/"
  },
  "include": ["./src/"]
}
